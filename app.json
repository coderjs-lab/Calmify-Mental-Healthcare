{
  "expo": {
    "name": "Calmify",
    "slug": "calmify",
    "version": "1.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "icon": "./assets/calmify-logo.png",
    "splash": {
      "image": "./assets/splash-calmify.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.app.calmify",
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "permissions": ["ACCESS_COARSE_LOCATION","ACCESS_FINE_LOCATION","CALL_PHONE"]
    }
  }
}
